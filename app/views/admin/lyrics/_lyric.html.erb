<tr data-toggle="modal" data-target="#myModal">
  <td><%= lyric_counter + 1 + @offset %></td>
  <td><%= lyric.user.name %></td>
  <td><%= lyric.song.name %></td>
  <td><%= activate_lyric lyric %></td>
  <td><%= lyric.created_at.strftime("%m/%d/%Y") %></td>
  <td>
    <%= link_to edit_admin_lyric_path(lyric) do %>
      <span><i class="fa fa-edit fa-1px"></i></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_lyric_path(id: lyric.id, page: params[:page],
      search: params[:search]), method: :delete,
      data: {confirm: t("views.admin.users.user.your_sure")}, :remote => true do %>
      <span><i class="fa fa-times fa-1px"></i></span>
    <% end %>
  </td>
</tr>
