<tr>
  <td><%= song_counter + 1 + @offset %></td>
  <td><%= song.name %></td>
  <td><%= song.album_name %></td>
  <td><%= hot_song song  %></td>
  <td><%= song.created_at.strftime("%m/%d/%Y") %></td>
  <td>
    <%= link_to edit_admin_song_path(song) do %>
      <span><i class="fa fa-edit fa-1px"></i></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_song_path(id: song.id, page: params[:page],
      search: params[:search]), method: :delete,
      data: {confirm: t("views.admin.users.user.your_sure")}, :remote => true do %>
      <span><i class="fa fa-times fa-1px"></i></span>
    <% end %>
  </td>
</tr>
