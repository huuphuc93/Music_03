<li class= "recommend-song item1">  
  <div class="row">
    <div class="col-md-2">
      <%= link_to album_path(recommend) do %>
        <%= image_tag recommend.cover_image %>
      <% end %>
    </div>
    <div class="col-md-10">
      <h4><%= link_to recommend.name, album_path(recommend) %></h4>
      <h5>
        <%= link_to artist_path(recommend.artist) do %>
          <%= t("views.categories.album.artist") + recommend.artist_name %>
        <% end %>
      </h5> 
    </div>
  </div>
</li>
