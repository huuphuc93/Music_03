<div class="header">
  <div class="bottom-header">
    <div class="container">
      <div class="header-bottom-left">
        <div class="logo">
          <%= link_to root_path do %>
            <%= image_tag "logo.jpg" %>
          <% end %>
        </div>
        <div class="search">
          <form>
            <input type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
            <input type="submit" value="SEARCH">
          </form>
        </div>
        <div class="clearfix"> </div>
      </div>
      <div class="header-bottom-right">
            <ul class="login pull-right">
              <% if current_user %>
                <li id= "user_profile" class="dropdown">
                <div class="dropdown-toggle" data-toggle="dropdown">
                  <%= gravatar_for current_user, size: 40 %>
                  <div class= "user_name">
                    <%= current_user.name %>
                    <span class="caret"></span>
                  </div>
                </div>
                <ul class="dropdown-menu">
                  <li>
                    <% if current_user.admin? %>
                      <%= link_to admin_root_path do %>
                        <span class= "pull-left"><i class="fa fa-unlock-alt fa-1px"></i></span>
                        <%= t "admin.dasboard" %>
                      <% end %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to user_path(current_user) do %>
                    	<span class= "pull-left"><i class="fa fa-user fa-1x"></i></span>
                      <%= t("views.layouts.header.profile") %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to logout_path, method: :delete do %>
                      <span class= "pull-left"><i class="fa fa-sign-out fa-1x"></i></span>
                      <%= t("views.layouts.header.logout") %>
                    <% end %>
                  </li>
                </ul>
              </li>
        		<% else %>
                <span><i class="fa fa-sign-in fa-1x"></i></span>
                <li>
                  <%= link_to login_path do %>
                    <%= t "views.layouts.header.login" %>
                  <% end %>
                </li> |
                <li>
                  <%= link_to signup_path do %>
                    <%= t "views.layouts.header.signup" %>
                  <% end %>
                </li>
              <% end %>
            </ul>
        <div class="clearfix"> </div>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>
