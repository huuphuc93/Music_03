<div class="shoes-grid">
  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-6">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
  </div>
  <div class="clearfix"></div>
  <h3><%= t "views.users.show.favorite_list" %></h3>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t "views.users.show.name" %></th>
          <th><%= t "views.users.show.delete" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "users/favorite_list", collection: @favorite_lists %>
      </tbody>
    </table>
    <%= paginate @favorite_lists %>
  </div>
</div>